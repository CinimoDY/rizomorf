<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="baseUrl" content="{{ baseUrl }}">
    <title>{{ title }} - DOS Mode</title>
    <link rel="stylesheet" href="{{ baseUrl }}/css/style.css">
    <script defer src="{{ baseUrl }}/js/title.js"></script>
    <script defer src="{{ baseUrl }}/js/search.js"></script>
    <script defer src="{{ baseUrl }}/js/dos-prompt.js"></script>
    <style>
        /* Main layout */
        body {
            min-height: 100vh;
            margin: 0;
            padding: 2px;
            box-sizing: border-box;
            display: flex;
            flex-direction: column;
            background: var(--dos-black);
            gap: 0;
        }

        /* Title bar wrapper */
        .title-bar-wrapper {
            position: fixed;
            top: 0;
            left: 0;
            right: 0;
            z-index: var(--z-frame);
            display: flex;
            flex-direction: column;
            gap: 0;
        }

        /* Window controls */
        .window-controls {
            position: absolute;
            top: 4px;
            right: 4px;
            padding: 0.25rem 1rem;
            color: var(--dos-black);
            display: flex;
            align-items: center;
            gap: 1rem;
            font-weight: bold;
            z-index: 1002;
            height: calc(var(--title-height) - 8px);
        }

        /* Navigation wrapper */
        .nav-wrapper {
            background: var(--dos-black);
            padding: var(--spacing-unit) 0;
        }

        /* Navigation */
        nav {
            padding: 0 var(--spacing-unit);
            display: flex;
            gap: 2rem;
            align-items: center;
        }

        nav a {
            color: var(--dos-yellow);
            text-decoration: none;
            padding: 0.25rem 0;
            font-size: 1rem;
            border-bottom: 2px solid transparent;
        }

        nav a:hover {
            background: transparent;
            color: var(--dos-yellow);
            border-bottom: 2px solid var(--dos-yellow);
        }

        /* Main content wrapper */
        .content-wrapper {
            flex: 1;
            display: flex;
            flex-direction: column;
            width: 100%;
            padding: var(--spacing-unit);
            min-height: 0;
            position: relative;
            z-index: 1;
        }

        /* DOS prompt */
        #dos-prompt {
            background: var(--dos-black);
            padding: 1rem 2rem;
            margin-top: auto;
            position: sticky;
            bottom: 2px;
            z-index: 1000;
        }

        /* Mobile adjustments */
        @media (max-width: 600px) {
            nav {
                gap: 1rem;
                justify-content: space-between;
            }

            nav a {
                font-size: 0.9rem;
            }
        }
    </style>
    <script>
        // Force scroll to top on page load and navigation
        function scrollToTop() {
            window.scrollTo({
                top: 0,
                left: 0,
                behavior: 'instant'
            });
        }
        
        // Run on initial load
        window.onload = scrollToTop;
        
        // Run on DOM content loaded
        document.addEventListener('DOMContentLoaded', scrollToTop);
        
        // Run on history changes (navigation)
        window.addEventListener('popstate', scrollToTop);
        
        // Run on hash changes
        window.addEventListener('hashchange', scrollToTop);

        // Toggle mobile navigation
        document.addEventListener('DOMContentLoaded', function() {
            const menuToggle = document.querySelector('.menu-toggle');
            const nav = document.querySelector('nav');
            
            menuToggle?.addEventListener('click', function(e) {
                e.preventDefault();
                nav.classList.toggle('show');
            });
        });

        document.addEventListener('DOMContentLoaded', () => {
            // Add typewriter effect to content
            function addTypewriterEffect(element) {
                const textNodes = [];
                
                // Recursively get all text nodes
                function getTextNodes(node) {
                    if (node.nodeType === 3) { // Text node
                        textNodes.push(node);
                    } else {
                        for (let child of node.childNodes) {
                            getTextNodes(child);
                        }
                    }
                }
                
                getTextNodes(element);
                
                // Store original text and clear
                const originalTexts = textNodes.map(node => node.textContent);
                textNodes.forEach(node => node.textContent = '');
                
                let currentNode = 0;
                let currentChar = 0;
                const typeSpeed = 10;
                
                function typeChar() {
                    if (currentNode < textNodes.length) {
                        const node = textNodes[currentNode];
                        const text = originalTexts[currentNode];
                        
                        if (currentChar < text.length) {
                            node.textContent += text[currentChar];
                            currentChar++;
                            setTimeout(typeChar, typeSpeed);
                        } else {
                            currentNode++;
                            currentChar = 0;
                            setTimeout(typeChar, typeSpeed);
                        }
                    }
                }
                
                typeChar();
            }

            // Apply to main content
            const content = document.querySelector('.content-wrapper');
            if (content) {
                addTypewriterEffect(content);
            }
        });
    </script>
</head>
<body data-page-title="{{ title }}">
    <div class="title-bar-wrapper">
        <div class="window-controls">
            <a href="#" class="menu-toggle" aria-label="Toggle menu">â˜°</a>
            [guest]
        </div>
    </div>
    
    <div class="nav-wrapper">
        <nav role="navigation" aria-label="Main navigation">
            <a href="{{ baseUrl }}/">Index</a>
            <a href="{{ baseUrl }}/about.html">FAQ</a>
            <a href="{{ baseUrl }}/blog/">Blog</a>
            <a href="{{ baseUrl }}/ux-work/">Work</a>
        </nav>
    </div>

    <div class="content-wrapper">
        {% block content %}
        {{ content | safe }}
        {% endblock %}
    </div>

    <div id="dos-prompt"></div>

    <div class="scanlines"></div>
</body>
</html> 
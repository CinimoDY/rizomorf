<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="baseUrl" content="{{ baseUrl }}">
    <title>{{ title }} - DOS Mode</title>
    <link rel="stylesheet" href="{{ baseUrl }}/css/style.css">
    <script defer src="{{ baseUrl }}/js/title.js"></script>
    <script defer src="{{ baseUrl }}/js/search.js"></script>
    <script defer src="{{ baseUrl }}/js/dos-prompt.js"></script>
    <style>
        /* Main layout */
        body {
            min-height: 100vh;
            margin: 0;
            padding: 2px;
            box-sizing: border-box;
            display: flex;
            flex-direction: column;
            background: var(--dos-black);
            gap: 0;
        }

        /* Title bar wrapper */
        .title-bar-wrapper {
            position: fixed;
            top: 0;
            left: 0;
            right: 0;
            z-index: var(--z-frame);
            display: flex;
            flex-direction: column;
            gap: 0;
        }

        /* Window controls */
        .window-controls {
            position: absolute;
            top: 4px;
            right: 4px;
            padding: 0.25rem 1rem;
            color: var(--dos-black);
            display: flex;
            align-items: center;
            gap: 1rem;
            font-weight: bold;
            z-index: 1002;
            height: calc(var(--title-height) - 8px);
        }

        /* Navigation wrapper */
        .nav-wrapper {
            position: fixed;
            top: calc(var(--title-height) + 2px);
            left: 0;
            right: 0;
            background: var(--dos-black);
            z-index: var(--z-nav);
        }

        /* Navigation */
        nav {
            display: flex;
            gap: 1rem;
            padding: 0.5rem 2rem;
            height: 2rem;
            align-items: center;
        }

        nav a {
            color: var(--dos-yellow);
            text-decoration: none;
            padding: 0.25rem 0.5rem;
        }

        nav a:hover {
            background: var(--dos-yellow);
            color: var(--dos-black);
        }

        /* Main content wrapper */
        .content-wrapper {
            flex: 1;
            display: flex;
            flex-direction: column;
            padding: 2rem;
            min-height: 0;
            position: relative;
            z-index: 1;
        }

        /* DOS prompt */
        #dos-prompt {
            background: var(--dos-black);
            padding: 1rem 2rem;
            margin-top: auto;
            position: sticky;
            bottom: 2px;
            z-index: 1000;
        }

        /* Mobile adjustments */
        @media (max-width: 600px) {
            .content-wrapper {
                padding: 1rem;
            }

            nav {
                padding: 0.5rem 1rem;
            }

            .nav-wrapper {
                position: fixed;
            }

            nav {
                display: none;
                position: absolute;
                top: 100%;
                left: 4px;
                right: 4px;
                background: var(--dos-black);
                border: 1px solid var(--dos-yellow);
                flex-direction: column;
                height: auto;
                padding: 0;
            }

            nav.show {
                display: flex;
            }

            nav a {
                padding: 0.75rem;
                border-bottom: 1px solid var(--dos-yellow);
            }

            nav a:last-child {
                border-bottom: none;
            }

            #dos-prompt {
                padding: 0.5rem 1rem;
            }
        }
    </style>
    <script>
        // Force scroll to top on page load and navigation
        function scrollToTop() {
            window.scrollTo({
                top: 0,
                left: 0,
                behavior: 'instant'
            });
        }
        
        // Run on initial load
        window.onload = scrollToTop;
        
        // Run on DOM content loaded
        document.addEventListener('DOMContentLoaded', scrollToTop);
        
        // Run on history changes (navigation)
        window.addEventListener('popstate', scrollToTop);
        
        // Run on hash changes
        window.addEventListener('hashchange', scrollToTop);

        // Toggle mobile navigation
        document.addEventListener('DOMContentLoaded', function() {
            const menuToggle = document.querySelector('.menu-toggle');
            const nav = document.querySelector('nav');
            
            menuToggle?.addEventListener('click', function(e) {
                e.preventDefault();
                nav.classList.toggle('show');
            });
        });
    </script>
</head>
<body data-page-title="{{ title }}">
    <div class="title-bar-wrapper">
        <div class="window-controls">
            <a href="#" class="menu-toggle" aria-label="Toggle menu">â˜°</a>
            [guest]
        </div>
    </div>
    
    <div class="nav-wrapper">
        <nav role="navigation" aria-label="Main navigation">
            <a href="{{ baseUrl }}/blog/">RECENTS</a>
            <a href="{{ baseUrl }}/ux-work/">UX WORK</a>
            <a href="{{ baseUrl }}/about.html">ABOUT</a>
            <a href="{{ baseUrl }}/faq.html">FAQ</a>
            <a href="{{ baseUrl }}/">INDEX</a>
        </nav>
    </div>

    <div class="content-wrapper">
        {% block content %}
        {{ content | safe }}
        {% endblock %}
        
        <div id="dos-prompt"></div>
    </div>

    <div class="scanlines"></div>
</body>
</html> 
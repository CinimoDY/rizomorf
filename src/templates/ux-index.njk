{% extends "base.njk" %}

{% block content %}
<main class="ux-work">
    {{ content | safe }}
    
    <section class="project-grid">
        {%- for project in collections.uxWork -%}
        <article class="project-card">
            <h3><a href="{{ project.url }}">{{ project.data.title }}</a></h3>
            {% if project.data.thumbnail %}
            <img src="{{ project.data.thumbnail }}" alt="{{ project.data.title }} thumbnail">
            {% endif %}
            <p>{{ project.data.description }}</p>
        </article>
        {%- endfor -%}
    </section>
</main>
{% endblock %} 